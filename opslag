    display: block;
  }
  
  /* Change kleur of dropdown links wanneer je hovered */
  .dropdown-content a:hover {background-color: #ddd;}
  
  /* laat het dropdown menu zien als je hovered */
  .dropdown:hover .dropdown-content {display: block;}
  
  /* verander dropdownkleur als je erover hovered */
  .dropdown:hover .dropbtn {background-color: #3e8e41;}


